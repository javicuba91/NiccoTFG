@page
@model TFGPlastic.Web.Pages.LoginErrorModel

@{
    ViewData["Title"] = "Error de Usuario y Contraseña";
}

<div class="text-center">
    <h1 class="display-4">
        Error de Login
    </h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card">
                    <div class="card-header bg-info">
                        Error de Inicio de Sesión
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Upsss!</strong> Error de Usuario y Contraseña. Por favor revise su datos
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <a class="btn btn-primary mt-3" asp-page="/Login"><i class="fa fa-arrow-left"></i> Volver Atrás</a>
                    </div>
                </div>
            </div>
        </div>
    </div>